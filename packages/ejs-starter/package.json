{
  "name": "ejs-starter",
  "version": "1.0.3",
  "description": "",
  "author": "David Ragsdale <https://github.com/djragsdale>",
  "private": true,
  "scripts": {
    "build": "npm-run-all build:clean build:html build:js",
    "build:clean": "rm -rf public/",
    "build:html": "DEBUG=* ejs-prerender",
    "build:js": "webpack --config webpack.prod.js --mode production",
    "build2": "npm-run-all build:clean build:js",
    "lint": "eslint src/",
    "preview": "npm run build && http-server public",
    "preview2": "npm run build2 && http-server public",
    "start": "npm run watch",
    "test": "echo \"Error: no test specified\" && exit 0",
    "watch": "npm-run-all -p watch:*",
    "watch:html": "nodemon -e ejs --exec \"npm run build:html\"",
    "watch:js": "webpack-dev-server --config webpack.dev.js --mode development"
  },
  "license": "MIT",
  "dependencies": {
    "normalize.css": "^8.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "@fullhuman/postcss-purgecss": "^1.1.0",
    "ajv": "^8.11.0",
    "autoprefixer": "^9.3.1",
    "babel-loader": "^8.2.4",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^6.7.1",
    "css-minimizer-webpack-plugin": "^3.4.1",
    "dotenv": "^8.2.0",
    "ejs": "^2.7.1",
    "ejs-prerender": "^1.1.1",
    "ejs-prerender-loader": "^1.0.6",
    "ejs-prerender-webpack-plugin": "^1.0.5",
    "env-cmd": "^10.0.1",
    "eslint": "latest",
    "eslint-config-airbnb-base": "latest",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "latest",
    "http-server": "^0.12.3",
    "mini-css-extract-plugin": "^2.6.0",
    "nodemon": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^6.2.1",
    "sass": "^1.49.9",
    "sass-loader": "^12.6.0",
    "source-map-loader": "^0.2.3",
    "style-loader": "^3.3.1",
    "url-loader": "^4.1.1",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  }
}
